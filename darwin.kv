#: kivy 1.6.0


<World>:

    pos: self.pos


<ControlPanel>:
    mutation_ctl: mutation_ctl
    lifespan_ctl: lifespan_ctl
    speed_ctl: speed_ctl
    info_disp: info

    size_hint_x: None
    width: 200
    pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        ToggleButton:
            size_hint_y: None
            height:30
            text: 'Sound'

        TextInput:
            id: info
            readonly: True
            text: "Welcome!"

        Label:
            size_hint_y: None
            height: 30
            text: "Mutation Rate: 1 in {0}".format(int(mutation_ctl.value_normalized * mutation_ctl.max))

        Slider:
            id: mutation_ctl
            size_hint_y: None
            height: 30
            max: 100
            value_normalized: .5
            on_value: self.parent.parent.read_slider('mutation_ctl')

        Label:
            size_hint_y: None
            height: 30
            text: "Lifespan: {0}%".format(int(lifespan_ctl.value))

        Slider:
            id: lifespan_ctl
            size_hint_y: None
            height: 30
            max: 200
            value_normalized: .5
            steps: 1
            on_value: self.parent.parent.read_slider('lifespan_ctl')

        Label:
            size_hint_y: None
            height: 30
            text: "Sim Speed: {0}".format(int(speed_ctl.value))

        Slider:
            id: speed_ctl
            size_hint_y: None
            height: 30
            min: 10
            max: 60
            value_normalized: .5
            steps: 1
            on_value: self.parent.parent.read_slider('speed_ctl')

<Container>:
    world: world
    ctl_panel: ctl_panel


    ControlPanel:
        id: ctl_panel


    World:
        id: world
        top_bound: top
        bottom_bound: bottom
        left_bound: left
        right_bound: right

        canvas:
            Color:
                rgba: 1, 1, 1, .7

            Rectangle:
                size: self.size
                pos: self.pos

        Widget:
            id: left
            size_hint: None, None
            width: 5
            height: self.parent.height
            pos: self.parent.pos
            canvas:
                Color:
                    rgb: .5, 1, 0
                Rectangle:
                    size: self.size
                    pos: self.pos

        Widget:
            id: right
            size_hint: None, None
            width: 5
            height: self.parent.height
            pos_hint_x: None
            x: self.parent.x + self.parent.width - 5
            canvas:
                Color:
                    rgb: .5, 1, 0
                Rectangle:
                    size: self.size
                    pos: self.pos

        Widget:
            id: top
            size_hint: None, None
            width: self.parent.width
            height: 5
            pos_hint: None, None
            x: self.parent.x
            y: self.parent.height - 5
            canvas:
                Color:
                    rgb: .5, 1, 0
                Rectangle:
                    size: self.size
                    pos: self.pos









